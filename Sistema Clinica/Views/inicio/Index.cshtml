
@{
    ViewBag.Title = "Index";
}

<h2>Sistema Clínica</h2>

@Html.ActionLink("Iniciar Sesión", "../logIn/Index")
<br />

<!-- Slider -->
<div class="panel panel-default" style="background: linear-gradient(to right, black, white, black)">
    <div class="panel-body">
        <div class="container">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-8">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="position:relative;z-index:1;">
                    <ol class="carousel-indicators" style="z-index:1 !important">
                        <li data-target="#myCarousel" data-slide-to="0" class=""></li>
                        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                        <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item">
                            <img src="~/Views/Recursos/imagenes/1.jpg" alt="Consultas" height="700" width="1280" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Consultas</h3>
                                <p></p>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/Views/Recursos/imagenes/2.jpg" alt="Historial en linea" height="700" width="1280" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Historial en linea</h3>
                                <p></p>
                            </div>
                        </div>
                        <div class="item active">
                            <img src="http://www.labrosarioarnedo.com/img/0517/005.jpg" alt="Laboratorios" height="700" width="1280" style="width:100%;">
                            <div class="carousel-caption">
                                <h3>Laboratorio</h3>
                                <p></p>
                            </div>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-2">
            </div>
        </div>
    </div>
</div>
<!-- Fin Slider -->
